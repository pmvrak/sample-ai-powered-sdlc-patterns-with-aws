{
  "name": "document-upload-lambda",
  "version": "1.0.0",
  "description": "Lambda function for document upload to Knowledge Base data source",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --testPathPattern=real-aws --runInBand",
    "test:deployed": "jest --testPathPattern=deployed-lambda --runInBand",
    "test:mock": "jest --testPathPattern=document-upload.test.ts --runInBand",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "package": "npm run clean && npm run build && zip -r function.zip dist/ node_modules/"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-agent": "^3.490.0",
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/client-lambda": "^3.863.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/credential-providers": "^3.863.0",
    "@aws-sdk/util-dynamodb": "^3.490.0",
    "multiparty": "^4.2.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.8",
    "@types/multiparty": "^0.0.36",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
